<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="00000000000001" author="persoff68">

        <createTable tableName="ftd_event">
            <column name="id" type="binary(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="type" type="varchar(16)">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="binary(16)"/>
            <column name="created_at" type="timestamp"/>
            <column name="last_modified_by" type="binary(16)"/>
            <column name="last_modified_at" type="timestamp"/>
        </createTable>

        <createTable tableName="ftd_event_recipient">
            <column name="event_id" type="binary(16)">
                <constraints  foreignKeyName="fk_event_recipient_event" references="ftd_event(id)"
                             nullable="false"/>
            </column>

            <column name="user_id" type="binary(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="index_event_recipient" tableName="ftd_event_recipient">
            <column name="user_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
